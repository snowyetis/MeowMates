<div class="row">
    <h4>Conversations</h4>
    <span class="label label-info">Inbox</span>
    <%= render collection: mailbox.inbox, partial: "conversation" %>
    <span class="label label-info">Sentbox</span>
    <%= render collection: mailbox.sentbox, partial: "conversations/conversation" %>
    <span class="label label-danger">Trash</span>
    <%= render collection: mailbox.trash, partial: "conversations/conversation" %>

    <%= link_to "Start Conversation", :new_conversation %>
</div>